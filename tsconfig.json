{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "types": ["bun"],
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["packages/*"]
    }
  }
}